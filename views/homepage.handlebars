<header class="sectionTitle">
    <h1>All posts</h1>
</header>
{{#each posts as |post|}}
<div class="container">
    <div class="card linkDiv" value="{{id}}">
        <header class="card-header">
            <p class="card-header-title truncateText">
                {{title}}
            </p>
        </header>
        <p class="content">
            Published by {{user.name}} on {{createdAt}}
        </p>
    </div>
    <div class="card-content">
        <p class="content wrapText">
            {{content}}
        </p>
    </div>
</div>
{{/each}}

{{!-- Javascript --}}
<script src="/js/homepage.js"></script>